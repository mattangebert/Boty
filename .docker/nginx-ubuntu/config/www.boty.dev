server {
    listen  80;
    server_name www.boty.dev;
    error_log /var/log/nginx/frontend_boty_error.log;
    access_log /var/log/nginx/frontend_boty_access.log;
    root /var/www/html/frontend/src;
    charset utf-8;

    location / {
        rewrite ^ https://$host$request_uri? permanent;
    }
}

server {
    listen 443 ssl;
    server_name www.boty.dev;
    error_log /var/log/nginx/frontend_boty_error.log;
    access_log /var/log/nginx/frontend_boty_access.log;
    ssl_certificate /etc/ssl/certs/ssl-cert-snakeoil.pem;
    ssl_certificate_key /etc/ssl/private/ssl-cert-snakeoil.key;

    keepalive_timeout 5;
    root /var/www/html/frontend/src;
    charset utf-8;

    location ~ ^/(scripts.*js|styles|images) {
        gzip_static on;
        expires 1y;
        add_header Cache-Control public;
        add_header ETag "";

        break;
    }

    location / {
        try_files $uri /index.html;
    }
}
