{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h3>Categories</h3>
        <a href="{{ path('category_create') }}">New Category</a>
        <ul class="table-list">
            <li class="bold">Category Name</li>
            <li></li>

            {% for category in categories %}
                <li>{{ category.name }}</li>
                <li>
                    <a href="{{ path('category_delete', { 'id': category.id }) }}">Delete</a>
                    <a href="{{ path('category_edit', { 'id': category.id }) }}">Edit</a>
                    <a href="{{ path('phrase_show_by_filters',{'cId': category.id, 'pId': 'all', 'ptId': 'all' }) }}">View Phrases</a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}