{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h3>Users</h3>
        <ul class="table-list table-list-5">
            <li class="bold">Email</li>
            <li class="bold">Roles</li>
            <li class="bold">Name</li>
            <li class="bold">Gender</li>
            <li></li>

            {% for user in users %}
                <li>{{ user.email }}</li>
                <li>
                    {% for role in user.roles %}
                        {{ role }}
                    {% endfor %}
                </li>
                <li>{{ user.name }}</li>
                <li>{{ user.gender }}</li>
                <li>
                    <a href="/user/{{ user.id }}">Show</a>
                    <a href="/user/delete/{{ user.id }}">Delete</a>
                    <a href="/user/edit/{{ user.id }}">Edit</a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}