{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h3>{{ user.name }}</h3>
        <a href="{{ path('user_show_all') }}">Show all Users</a>
        <ul class="table-list table-list-5">
            <li class="bold">Email</li>
            <li class="bold">Roles</li>
            <li class="bold">Name</li>
            <li class="bold">Gender</li>
            <li></li>

            <li>{{ user.email }}</li>
            <li>
                {% for role in user.roles %}
                    {{ role }}
                {% endfor %}
            </li>
            <li>{{ user.name }}</li>
            <li>{{ user.gender }}</li>
            <li>
                <a href="{{ path('user_delete', { 'id': user.id }) }}">Delete</a>
                <a href="{{ path('user_edit', { 'id': user.id }) }}">Edit</a>
            </li>

        </ul>
    </div>
{% endblock %}